{
  "info": {
    "name": "Mukulah API Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Auth endpoints for Mukulah Fastify API"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Test User\"\n}"
        },
        "url": {
          "raw": "http://localhost/v1/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["v1", "auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost/v1/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["v1", "auth", "login"]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost/v1/auth/refresh",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["v1", "auth", "refresh"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost/v1/auth/logout",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["v1", "auth", "logout"]
        }
      }
    },
    {
      "name": "Get Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://localhost/v1/auth/me",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["v1", "auth", "me"]
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost/v1/health",
          "protocol": "http",
          "host": ["localhost"],
          "path": ["v1", "health"]
        }
      }
    }
  ]
}
